<!-- modal medium -->
<div class="modal fade" id="nuevoProducto" tabindex="-1" role="dialog" aria-labelledby="nuevoProductoLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="nuevoProducto">Crear producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="" action="/productos/store" method="POST">

                <div class="modal-body row">

                    <div class="form-group col-12">
                        <label for="nombre" class=" form-control-label">Nombre</label>
                        <input type="text" name="nombre" placeholder="nombre" class="form-control" autofocus required>
                    </div>
                    <div class="form-group col-12 col-md-12">
                        <label for="apellidos" class=" form-control-label">Descripción</label>
                        <textarea name="descripcion" class="form-control" required placeholder="Descripción"></textarea>
                    </div>

                    <div class="form-group col-12 col-md-6">
                        <label for="precio" class=" form-control-label">Precio</label>
                        <input type="number" name="precio" placeholder="Precio" min="1" max="999999999999999.99998"
                            class="form-control" required>
                    </div>

                    <div class="form-group col-12 col-md-6">
                        <label for="cantidad" class=" form-control-label">Cantidad</label>
                        <input type="number" name="cantidad" placeholder="Cantidad" min="1" max="999999999999999.99998"
                            class="form-control" required>
                    </div>

                    <div class="form-group col-12 col-md-12">
                        <label for="cantidad" class=" form-control-label">Categorias</label>
                        <select name="id_categoria" class="form-control">
                            {{#each categorias }}
                            <option value="{{ id }}">
                                {{ nombre }}
                            </option>
                            {{/each }}
                        </select>
                    </div>

                    <input type="hidden" name="id_usuario" value="1">
                    <input type="hidden" name="id_estado" value="1">


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>

        </div>
    </div>
</div>
<!-- end modal medium -->