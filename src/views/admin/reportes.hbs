<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
<script type="text/javascript" src="/js/Chart.min.js"></script>


<div class="row">


    <div class="col-lg-12">
        <div class="au-card m-b-30">
            <div class="au-card-inner">
                <h3 class="title-2 m-b-40">30 d√¨as vs valor total venta</h3>
                <canvas id="ventas-dias"></canvas>
            </div>
        </div>
    </div>
</div>

<script>
    fetch("http://localhost:3000/admin/reportesInfo")
        .then((response) => response.json())
        .then((json) => generarGrafica(json));

    function generarGrafica(datos) {
        try {
            console.log(datos);
            //Team chart
            var ctx = document.getElementById("ventas-dias").getContext('2d');
            if (ctx) {
                var myChart = new Chart(ctx, {
                    type: "line",
                    data: {
                        labels: datos.dias,
                        type: "line",
                        defaultFontFamily: "Poppins",
                        datasets: [
                            {
                                data: datos.registros,
                                label: "Total ventas",
                                backgroundColor: "rgba(0,103,255,.15)",
                                borderColor: "rgba(0,103,255,0.5)",
                                borderWidth: 3.5,
                                pointStyle: "circle",
                                pointRadius: 5,
                                pointBorderColor: "transparent",
                                pointBackgroundColor: "rgba(0,103,255,0.5)",
                            },
                        ],
                    },
                    options: {
                        responsive: true,
                        tooltips: {
                            mode: "index",
                            titleFontSize: 12,
                            titleFontColor: "#000",
                            bodyFontColor: "#000",
                            backgroundColor: "#fff",
                            titleFontFamily: "Poppins",
                            bodyFontFamily: "Poppins",
                            cornerRadius: 3,
                            intersect: false,
                        },
                        legend: {
                            display: false,
                            position: "top",
                            labels: {
                                usePointStyle: true,
                                fontFamily: "Poppins",
                            },
                        },
                        scales: {
                            xAxes: [
                                {
                                    display: true,
                                    gridLines: {
                                        display: false,
                                        drawBorder: false,
                                    },
                                    scaleLabel: {
                                        display: true,
                                        labelString: "Dias",
                                    },
                                    ticks: {
                                        fontFamily: "Poppins",
                                    },
                                },
                            ],
                            yAxes: [
                                {
                                    display: true,
                                    gridLines: {
                                        display: true,
                                        drawBorder: false,
                                    },
                                    scaleLabel: {
                                        display: true,
                                        labelString: "Valor",
                                        fontFamily: "Poppins",
                                    },
                                    ticks: {
                                        fontFamily: "Poppins",
                                    },
                                },
                            ],
                        },
                        title: {
                            display: false,
                        },
                    },
                });
            }
        } catch (error) {
            console.log(error);
        }
    }

</script>