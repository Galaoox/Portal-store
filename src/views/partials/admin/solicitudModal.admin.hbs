{{#each solicitudes }}
<!-- modal medium -->
<div class="modal fade" id="solicitud{{ id }}" tabindex="-1" role="dialog" aria-labelledby="solicitud{{ id }}Label"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="solicitud{{ id }}">Producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="" action="/solicitud/edit/{{ id }}" method="POST">

                <div class="modal-body row">

                    <div class="form-group col-12">
                        <label for="nombre" class=" form-control-label">Nombre</label>
                        <input type="text" name="nombre" readonly value="{{ nombre }}" placeholder="nombre"
                            class="form-control" autofocus required>
                    </div>
                    <div class="form-group col-12 col-md-12">
                        <label for="apellidos" class=" form-control-label">Descripción</label>
                        <textarea name="descripcion" readonly class="form-control" required
                            placeholder="Descripción">{{ descripcion }}</textarea>
                    </div>

                    <div class="form-group col-12 col-md-6">
                        <label for="precio" class=" form-control-label">Precio</label>
                        <input type="number" name="precio" readonly value="{{ precio }}" placeholder="Precio" min="1"
                            max="999999999999999.99998" class="form-control" required>
                    </div>

                    <div class="form-group col-12 col-md-6">
                        <label for="cantidad" class=" form-control-label">Cantidad</label>
                        <input type="number" name="cantidad" readonly value="{{ cantidad }}" placeholder="Cantidad"
                            min="1" max="999999999999999.99998" class="form-control" readonly required>
                    </div>

                    <div class="form-group col-12 col-md-12">
                        <label for="cantidad" class=" form-control-label">Categorias</label>
                        <input type="text" value="{{ categoria }}" placeholder="Categoria" class="form-control" readonly
                            required>
                    </div>

                    <input type="hidden" name="id_usuario" value="1">
                    <input type="hidden" name="id_estado" value="1">


                </div>
                <div class="modal-footer">
                    <a href="/productos/estado/1/{{id}}" class="btn btn-success">Aprobar</a>
                    <a href="/productos/estado/2/{{id}}" class="btn btn-danger">Desaprobar</a>
                </div>
            </form>

        </div>
    </div>
</div>
<!-- end modal medium -->

{{/each  }}