<main class="main mt-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="product-single-container product-single-default">
                    <div class="row">
                        <div class="col-lg-7 col-md-6">
                            <div class="product-single-gallery">
                                <div class="product-slider-container product-item">
                                    <div class="product-single-carousel owl-carousel owl-theme">
                                        <div class="product-item">
                                            <img class="product-single-image" src="/fotos/{{producto.img}}">
                                        </div>
                                    </div>
                                </div>
                            </div><!-- End .product-single-gallery -->
                        </div><!-- End .col-lg-7 -->

                        <div class="col-lg-5 col-md-6">
                            <div class="product-single-details">
                                <h1 class="product-title">{{producto.nombre}}</h1>
                                <div class="">
                                    <label>Fecha adici칩n {{producto.fecha}}</label>
                                </div>
                                <div class="">
                                    <label>Vendedor {{producto.vendedor}}</label>
                                </div>
                                <div class="price-box">
                                    <span class="product-price">${{producto.precio}}</span>
                                </div><!-- End .price-box -->


                                <div class="product-action">
                                    <form class="form-inline" action="/carrito/add" method="get">
                                        <div class="product-single-qty">
                                            <input class=" form-control" min="1" max="{{producto.cantidad}}"
                                                name="cantidad" type="number" value="1" required>
                                        </div><!-- End .product-single-qty -->
                                        <input type="hidden" name="producto" value="{{producto.id}}" type="text">
                                        <button class="paction add-cart" title="A침adir al carrito" type="submit">
                                            <span>A침adir al carrito</span>
                                        </button>
                                    </form>
                                </div><!-- End .product-action -->
                            </div><!-- End .product-single-details -->
                            <div class="product-single-tabs">
                                <ul class="nav nav-tabs" role="tablist">
                                    <li class="nav-item ">
                                        <a class="nav-link active" id="product-tab-desc" data-toggle="tab"
                                            href="#product-desc-content" role="tab" aria-controls="product-desc-content"
                                            aria-selected="false">Descripci칩n</a>
                                    </li>
                                </ul>
                                <div class="tab-content ">
                                    <div class="tab-pane fade show active" id="product-desc-content" role="tabpanel"
                                        aria-labelledby="product-tab-desc">
                                        <div class="product-desc-content">
                                            <p>
                                                {{producto.descripcion}}
                                            </p>
                                        </div><!-- End .product-desc-content -->
                                    </div><!-- End .tab-pane -->
                                </div><!-- End .tab-content -->
                            </div><!-- End .product-single-tabs -->
                        </div><!-- End .col-lg-5 -->
                    </div><!-- End .row -->
                </div><!-- End .product-single-container -->
            </div><!-- End .col-lg-9 -->
        </div><!-- End .row -->


        <div class="mb-lg-4"></div><!-- margin -->
    </div><!-- End .container -->
</main><!-- End .main -->